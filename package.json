{
  "name": "sentry-academy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node src/lib/db/migrate.ts migrate",
    "db:migrate:dry": "node src/lib/db/migrate.ts migrate --dry-run",
    "db:migrate:rollback": "node src/lib/db/migrate.ts rollback --force",
    "db:status": "node src/lib/db/migrate.ts status",
    "db:validate": "node src/lib/db/migrate.ts validate",
    "db:seed": "node src/lib/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:health": "node -e \"import('./src/lib/db/index.js').then(async ({healthCheck}) => console.log(await healthCheck()))\"",
    "db:quality": "node -e \"import('./src/lib/db/validation.js').then(async ({DataValidator}) => { const v = new DataValidator(); console.log(await v.generateQualityReport()); })\"",
    "db:cleanup": "node -e \"import('./src/lib/db/validation.js').then(async ({DataValidator}) => { const v = new DataValidator(); const actions = await v.performCleanup(true); console.log(actions); })\"",
    "db:backup": "node src/lib/db/backup.ts",
    "db:backup:create": "node src/lib/db/backup.ts create",
    "db:backup:list": "node src/lib/db/backup.ts list",
    "db:backup:cleanup": "node src/lib/db/backup.ts cleanup",
    "db:reset": "drizzle-kit drop && npm run db:generate && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.2",
    "@neondatabase/serverless": "^0.9.5",
    "@sentry/nextjs": "^10.12.0",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "lucide-react": "^0.344.0",
    "next": "^15.0.3",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.5.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.18",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
